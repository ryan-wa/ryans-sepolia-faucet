# Ethereum Sepolia RPC URL (you can use Infura, Alchemy, or other providers)
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Private key for the faucet wallet (this wallet will send ETH to users)
FAUCET_PRIVATE_KEY=your_private_key_here

# Amount of ETH to send per request (in wei)
FAUCET_AMOUNT_WEI=1000000000000000000

# Cooldown period between requests (in seconds)
FAUCET_COOLDOWN_SECONDS=3600
